# 生产环境配置文件模板
# 复制此文件为 .env.prod 并修改相应配置

# ===========================================
# 数据库配置
# ===========================================
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=blog_user
DB_PASSWORD=your_database_password_here
DB_NAME=blog_db
DB_TIMEZONE=Asia/Shanghai
DB_SSLMODE=disable

# ===========================================
# Redis 配置
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# ===========================================
# 应用配置
# ===========================================
# JWT密钥 (建议使用32位随机字符串)
JWT_SECRET=your_jwt_secret_key_here

# API基础URL (替换为你的域名)
API_BASE_URL=http://www.godepth.tophttp://localhost:3001

# 环境模式
GIN_MODE=release
ENVIRONMENT=production

# ===========================================
# 域名配置
# ===========================================
DOMAIN=www.godepth.top

# ===========================================
# 文件上传配置
# ===========================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,webp,pdf,doc,docx

# ===========================================
# 邮件配置 (可选)
# ===========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@yourdomain.com

# ===========================================
# 第三方服务配置 (可选)
# ===========================================
# 阿里云OSS配置
ALIYUN_OSS_ENDPOINT=
ALIYUN_OSS_ACCESS_KEY_ID=
ALIYUN_OSS_ACCESS_KEY_SECRET=
ALIYUN_OSS_BUCKET=

# 腾讯云COS配置
TENCENT_COS_SECRET_ID=
TENCENT_COS_SECRET_KEY=
TENCENT_COS_REGION=
TENCENT_COS_BUCKET=

# ===========================================
# 监控和日志配置
# ===========================================
LOG_LEVEL=info
LOG_FILE=/var/log/blog/app.log
ENABLE_ACCESS_LOG=true

# ===========================================
# 安全配置
# ===========================================
# CORS 允许的域名
CORS_ALLOWED_ORIGINS=http://www.godepth.top,https://godepth.top

# 会话配置
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400

# 限流配置
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ===========================================
# 缓存配置
# ===========================================
CACHE_TTL=3600
CACHE_PREFIX=blog_cache

# ===========================================
# 搜索配置
# ===========================================
SEARCH_INDEX_PATH=/app/search_index
SEARCH_BATCH_SIZE=100

# ===========================================
# 备份配置
# ===========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/opt/blog/backups