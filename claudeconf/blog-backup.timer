[Unit]
Description=Blog Backup Timer
Documentation=https://github.com/your-repo/blog
Requires=blog-backup.service

[Timer]
# 每天凌晨2点执行备份
OnCalendar=*-*-* 02:00:00

# 如果系统关机错过了定时任务，开机后15分钟执行
Persistent=true

# 随机延迟最多30分钟，避免多个服务同时备份
RandomizedDelaySec=1800

# 确保服务在备份前完全启动
AccuracySec=1m

[Install]
WantedBy=timers.target